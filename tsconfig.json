{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2022",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./browser/src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ],
  "ts-node": {
    "files": true
  }
}
