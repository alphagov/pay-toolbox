{
  "name": "pay-toolbox",
  "version": "0.3.0",
  "description": "Internal administrative tools service for the GOV.UK Pay products.",
  "engines": {
    "node": "10.15.0",
    "npm": "6.4.1"
  },
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsc-watch --noClear --onSuccess \"./scripts/run-dev\"",
    "lint": "eslint src",
    "test": "npm run test:unit",
    "test:unit": "mocha -r ts-node/register src/web/modules/**/*.spec.js",
    "test:cypress": "cypress run",
    "build": "scripts/build && npm run build:typescript && npm run build:copy && npm run build:sass",
    "build:typescript": "tsc",
    "build:sass": "scripts/compile-assets",
    "build:copy": "copyfiles --up 1 src/**/*.njk dist/",
    "preinstall": "echo \"Preinstall hook\" && exit 0",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/pay-toolbox.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/alphagov/pay-toolbox#readme",
  "dependencies": {
    "axios": "0.19.0",
    "body-parser": "1.18.3",
    "class-validator": "0.9.1",
    "client-sessions": "0.8.0",
    "cls-hooked": "4.2.2",
    "connect-flash": "0.1.1",
    "cookie-session": "2.0.0-beta.3",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "govuk-frontend": "2.12.0",
    "joi": "14.3.1",
    "lodash": "^4.17.11",
    "morgan": "1.9.1",
    "nunjucks": "3.2.0",
    "stripe": "7.1.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/cls-hooked": "4.3.0",
    "@types/cookie-session": "^2.0.36",
    "@types/express": "^4.16.1",
    "@types/express-flash": "0.0.0",
    "@types/node": "^12.0.4",
    "@types/stripe": "^6.26.5",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "chai": "4.2.0",
    "copyfiles": "2.1.0",
    "cypress": "3.3.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.3",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "nodemon": "1.19.1",
    "ts-node": "8.2.0",
    "tsc-watch": "2.2.1",
    "typescript": "3.5.1"
  }
}
