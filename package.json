{
  "name": "pay-toolbox",
  "version": "0.3.0",
  "description": "Internal administrative tools service for the GOV.UK Pay products.",
  "engines": {
    "node": "10.15.0",
    "npm": "6.4.1"
  },
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsc-watch --noClear --onSuccess \"./scripts/run-dev\"",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "test": "npm run test:unit",
    "test:unit": "AUTH_GITHUB_ENABLED=true mocha -r ts-node/register --recursive \"./src/**/*.spec.{js,ts}\"",
    "test:cypress": "./scripts/run-cypress",
    "build": "scripts/build && npm run build:typescript && npm run build:copy && npm run build:sass",
    "build:typescript": "tsc",
    "build:sass": "scripts/compile-assets",
    "build:copy": "copyfiles --up 1 src/**/*.njk dist/",
    "preinstall": "echo \"Preinstall hook\" && exit 0",
    "prepare": "npm run build:sass",
    "postinstall": "echo \"postinstall set to run with prepare (only in dev)\" && exit 0",
    "version": "echo $npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/pay-toolbox.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/alphagov/pay-toolbox#readme",
  "dependencies": {
    "@sentry/node": "5.7.1",
    "axios": "0.19.0",
    "body-parser": "1.19.0",
    "class-validator": "0.11.0",
    "client-sessions": "0.8.0",
    "cls-hooked": "4.2.2",
    "connect-flash": "0.1.1",
    "cookie-session": "2.0.0-beta.3",
    "csurf": "1.10.0",
    "deep-diff": "1.0.2",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "govuk-frontend": "2.13.0",
    "helmet": "3.21.2",
    "https-proxy-agent": "3.0.1",
    "joi": "14.3.1",
    "json2csv": "4.5.4",
    "lodash": "4.17.15",
    "moment": "^2.24.0",
    "morgan": "1.9.1",
    "nunjucks": "3.2.0",
    "passport": "0.4.0",
    "passport-github": "1.1.0",
    "stripe": "7.9.1",
    "winston": "3.2.1",
    "winston-transport": "4.3.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/cls-hooked": "4.3.0",
    "@types/cookie-session": "2.0.36",
    "@types/csurf": "1.9.35",
    "@types/deep-diff": "1.0.0",
    "@types/express": "4.17.0",
    "@types/express-flash": "0.0.0",
    "@types/json2csv": "4.5.0",
    "@types/lodash": "4.14.136",
    "@types/mocha": "5.2.7",
    "@types/node": "12.7.12",
    "@types/passport": "1.0.0",
    "@types/stripe": "6.25.8",
    "@typescript-eslint/eslint-plugin": "2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "chai": "4.2.0",
    "chai-spies": "1.0.0",
    "copyfiles": "2.1.0",
    "eslint": "6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "mocha": "6.1.4",
    "mockery": "2.1.0",
    "node-sass": "4.12.0",
    "ts-node": "8.4.1",
    "tsc-watch": "4.0.0",
    "typescript": "3.6.4"
  }
}
